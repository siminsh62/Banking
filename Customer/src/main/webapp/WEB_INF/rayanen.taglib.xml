<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib version="2.0"
                xmlns="http://java.sun.com/xml/ns/javaee"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
   http://java.sun.com/xml/ns/javaee/web-facelettaglibary_2_0.xsd">
    <namespace>http://rayanen.com</namespace>
    <tag>
        <tag-name>persiancalendar</tag-name>
        <component>
            <component-type>com.rayanen.faces.component.persiancalendar.PersianCalendar</component-type>
            <renderer-type>com.rayanen.faces.component.persiancalendar.PersianCalendar</renderer-type>
            <handler-class>com.rayanen.faces.component.persiancalendar.PersianCalendarHandler</handler-class>
        </component>
        <attribute>
            <name>value</name>
            <type>java.util.Date</type>
        </attribute>
        <attribute>
            <name>styleClass</name>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>disabled</name>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>readonly</name>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <name>valueChangeListener</name>
            <method-signature>void valueChange(javax.faces.event.ValueChangeEvent)</method-signature>
        </attribute>
        <attribute>
            <name>converterId</name>
            <type>java.lang.String</type>
        </attribute>
    </tag>
    <tag>
        <tag-name>chart</tag-name>
        <component>
            <component-type>com.rayanen.faces.component.chart.Chart</component-type>
            <attribute>
                <name>value</name>
                <type>java.lang.Object</type>
            </attribute>
            <attribute>
                <name>type</name>
                <type>java.lang.String</type>
            </attribute>
            <attribute>
                <name>title</name>
                <type>java.lang.String</type>
            </attribute>
            <attribute>
                <name>subtitle</name>
                <type>java.lang.String</type>
            </attribute>
            <attribute>
                <name>xtitle</name>
                <type>java.lang.String</type>
            </attribute>
            <attribute>
                <name>ytitle</name>
                <type>java.lang.String</type>
            </attribute>
            <attribute>
                <name>zoomable</name>
                <type>java.lang.Boolean</type>
            </attribute>
        </component>
    </tag>
</facelet-taglib>